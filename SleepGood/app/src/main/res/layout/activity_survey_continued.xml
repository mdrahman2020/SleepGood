<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyContinued">

    <CheckBox
        android:id="@+id/q3c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="8dp"
        android:text="I am overwhelmed by school/work"
        app:layout_constraintBottom_toTopOf="@+id/q3c2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/q3c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="18dp"
        android:text="I am having issues with a loved one"
        app:layout_constraintBottom_toTopOf="@+id/q3c3"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/q3c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="17dp"
        android:text="I have unfulfilled desires"
        app:layout_constraintBottom_toTopOf="@+id/q3c4"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/q3c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginBottom="25dp"
        android:text="I have suffered a loss"
        app:layout_constraintBottom_toTopOf="@+id/q3c5"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/q3c5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="244dp"
        android:text="None of the Above"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Finish"
        android:layout_width="92dp"
        android:layout_height="55dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="40dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="349dp"
        android:layout_height="98dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="cursive"
        android:text="Do any of the following apply to you?"
        android:textColor="#2187B6"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/q3c1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>